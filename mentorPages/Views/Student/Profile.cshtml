@model MENTOR.Models.Student
@{
    ViewData["Title"] = "Test";
    Layout = "~/Views/Shared/_studentLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Profilim</h1>
                </div><!-- /.col -->

            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">

        <!-- Horizontal Form -->
        <div class="card card-outline card-info">

            <!-- form start -->
            <form class="form-horizontal">
                <div class="card-body">
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Ad</label>
                        <div class="col-sm-10">
                            <input asp-for="name" type="text" class="form-control" placeholder="@Model.name">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Soyad</label>
                        <div class="col-sm-10">
                            <input asp-for="lastName" class="form-control" placeholder="@Model.lastName">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">E Posta</label>
                        <div class="col-sm-10">
                            <input asp-for="email" class="form-control" placeholder="@Model.email">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                        <div class="col-sm-10">
                            <input asp-for="password" class="form-control" placeholder="@Model.password">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Alan</label>
                        <div class="col-sm-10">
                            <select class="form-control" placeholder="@Model.branch">
                                @foreach (var item in Model.AllBranches)
                                {
                                    <option value="@item.branchId">@item.branchName</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-info justify-content-center">Kaydet</button>
                </div>
                <!-- /.card-footer -->
            </form>
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>

