@model MENTOR.Models.Homepage
@{
    ViewData["Title"] = "Homepage";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark font-siz"><b>Hoş Geldin Mentor</b></h1>
                </div><!-- /.col -->

            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">

        <div class="row justify-content-between p-3">

            <div class="col-lg-12">

                <h1 class=" mb-3 text-dark text-center">Alan Ekleme</h1>

                <div class="card card-outline card-warning p-4">
                    <form asp-controller="Admin" asp-action="Homepage">
                        <div class="card-body">
                            <h4 style="margin-left: -20px">Alan Ekle</h4>
                            <input asp-for="Branch.branchName" class="form-control" />
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="form-control btn btn-primary">Ekle</button>
                        </div>
                    </form>
                    <!-- /.card-body -->
                </div>

                <h1 class=" mb-3 text-dark text-center">Tüm Alanlar</h1>

                <div class="card card-outline card-success p-4">
                    <div class="card-body">
                        <table class="table table-hover table-dark" >
                            <thead>
                                <tr>
                                    <th scope="col">Alan ID</th>
                                    <th scope="col">Alan Ad</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Branches)
                                {
                                    <tr>
                                        <td>@item.branchId</td>
                                        <td>@item.branchName</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.card -->

            </div>
        </div>

    </section>
    <!-- /.content -->
</div>
