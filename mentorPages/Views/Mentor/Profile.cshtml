
@{
    ViewData["Title"] = "Test";
    Layout = "~/Views/Shared/_mentorLayout.cshtml";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Profilim</h1>
                </div><!-- /.col -->

            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">

        <!-- Horizontal Form -->
        <div class="card card-outline card-info">

            <!-- form start -->
            <form class="form-horizontal">
                <div class="card-body">
                    <div class="form-group row">
                        <label for="name" class="col-sm-2 col-form-label">Ad</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="Ad">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="surname" class="col-sm-2 col-form-label">Soyad</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="Soyad">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email" class="col-sm-2 col-form-label">E Posta</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="password" class="col-sm-2 col-form-label">Password</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" placeholder="Password">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="branch" class="col-sm-2 col-form-label">Alan</label>
                        <div class="col-sm-10">
                            <div class="form-control">
                                <select class="mul-select" multiple="multiple" style="width: 100%">
                                    <option>Web Programlama</option>
                                    <option>Mobil Programlama</option>
                                    <option>Veri Bilimi</option>
                                    <option>Yapay Zeka/Makine Öğrenmesi</option>
                                    <option>Genel Tavsiye</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="about" class="col-sm-2 col-form-label">Hakkında</label>
                        <div class="col-sm-10">
                            <textarea class="col-sm-12" style="height: 100px"></textarea>
                        </div>
                    </div>

                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-info justify-content-center">Kaydet</button>
                </div>
                <!-- /.card-footer -->
            </form>
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>




